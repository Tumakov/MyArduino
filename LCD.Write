#include <LiquidCrystal.h>

LiquidCrystal lcd(4, 5, 10, 11, 12, 13);

void setup(){
  lcd.begin(16, 2);
  Serial.begin(9600);
  lcd.setCursor(0,1);
  lcd.print ("Hello, Evgeny");
}

void loop(){
  if (Serial.available()) {
    delay(100);
    lcd.clear();
    while (Serial.available() > 0) {
      lcd.write(Serial.read());
    }
    lcd.setCursor(0,1);
    lcd.write("analyzing...");
    delay(5000);
    lcd.setCursor(0,1);
    lcd.write("How'r u?    ");
  }
}
